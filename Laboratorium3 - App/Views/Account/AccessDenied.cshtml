@{
    ViewData["Title"] = "Dostęp zabroniony";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
       

        .cont {
            max-width: 600px;
            padding: 20px;
            border: #dc3545 solid 2px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
            margin: auto;
            margin-top: 100px;
        }

        h1 {
            color: #fff;
            margin-bottom: 20px;
        }

        p {
            color: #666;
            line-height: 1.6;
        }

        .message {
            background-color: #ffdddd;
            color: #d8000c;
            padding: 10px;
            border-radius: 5px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="cont">
        <h1>Dostęp Zabroniony</h1>
        <div class="message">
            @ViewBag.ErrorMessage
        </div>
        <p>Powrót na <a href="/">stronę główną</a>.</p>
    </div>
</body>
</html>
