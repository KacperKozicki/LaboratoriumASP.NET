@model Contact

<div class="container mt-4">
    <h1 class="mb-4">Szczegóły dotyczące kontaktu nr: @Model.Id</h1>

    <div class="row">
        <div class="col-md-6">
            <p class="bg-secondary"><strong>Utworzono:</strong> @Model.Created</p>
            <p><strong>Imię:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Telefon:</strong> @Model.Phone</p>
            <p><strong>Data urodzenia:</strong> @Model.Birth</p>
            <p><strong>Ważność kontaktu:</strong> @Model.Priority.GetDisplayName()</p>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Index">Powrót</a>
    </div>
</div>
